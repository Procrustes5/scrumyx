{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "scrumyx",
  "version": "0.1.0",
  "identifier": "com.scrumyx.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "scrumyx",
        "width": 360,
        "height": 280,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "fullscreen": false,
        "resizable": false,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
